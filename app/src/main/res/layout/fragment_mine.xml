<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headLayout"
            android:layout_width="fill_parent"
            android:layout_height="90.0dip">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/headImg"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dip"
                android:src="@drawable/touxiang_x128" />

            <TextView
                android:id="@+id/loginTipsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/headImg"
                android:text="请登录"
                android:textColor="@color/colorPrimaryText" />

            <include layout="@layout/deliver_line_layout" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/updateNameLayout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="20.0dip">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentTop="true"
                android:background="@color/colorSecondText" />

            <ImageView
                android:id="@+id/updateNameImg"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:src="@drawable/yonghuming_x48" />

            <TextView
                android:id="@+id/updateNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dip"
                android:layout_toRightOf="@id/updateNameImg"
                android:text="修改用户名" />

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/goto_x48" />

            <include layout="@layout/deliver_line_layout" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/updatePassLayout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="20.0dip">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentTop="true"
                android:background="@color/colorSecondText" />

            <ImageView
                android:id="@+id/updatePassImg"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:src="@drawable/password_x48" />

            <TextView
                android:id="@+id/updatePassTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25.0dip"
                android:layout_toRightOf="@id/updatePassImg"
                android:text="修改密码" />

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/goto_x48" />

            <include layout="@layout/deliver_line_layout" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/backupLayout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="20.0dip">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentTop="true"
                android:background="@color/colorSecondText" />

            <ImageView
                android:id="@+id/backupImg"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:src="@drawable/backup_x48" />

            <TextView
                android:id="@+id/packupTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25.0dip"
                android:layout_toRightOf="@id/backupImg"
                android:text="备份" />

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/goto_x48" />

            <include layout="@layout/deliver_line_layout" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cleanLayout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="20.0dip">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentTop="true"
                android:background="@color/colorSecondText" />

            <ImageView
                android:id="@+id/cleanImg"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:src="@drawable/clean_x48" />

            <TextView
                android:id="@+id/cleanTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25.0dip"
                android:layout_toRightOf="@id/cleanImg"
                android:text="清空" />

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/goto_x48" />

            <include layout="@layout/deliver_line_layout" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/exitLayout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="20.0dip">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentTop="true"
                android:background="@color/colorSecondText" />

            <TextView
                android:id="@+id/exitTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="退出"
                android:textColor="@color/colorRed" />

            <include layout="@layout/deliver_line_layout" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="190.0dip" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>